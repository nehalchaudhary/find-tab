{
    "name": "Find tab", 
    "version": "2.0",
    "description": "Finding tabs made easy!",
    "permissions": ["tabs", "activeTab", "declarativeContent", "storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/tab.png",
        "32": "images/tab.png",
        "48": "images/tab.png",
        "128": "images/tab.png"
      }
    },
    "icons": {
      "16": "images/tab.png",
      "32": "images/tab.png",
      "48": "images/tab.png",
      "128": "images/tab.png"
    },
    "manifest_version": 2,
    "options_page": "options.html",
    "commands": {          
    	"_execute_page_action": {
        	"suggested_key": {
	          	"default": "Ctrl+S",
	          	"windows": "Alt+S",
	          	"mac": "MacCtrl+S"
        	}
      	}
    }
}